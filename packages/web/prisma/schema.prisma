generator client {
  provider = "prisma-client"
  output   = "../.prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id                          Int       @id @default(autoincrement())
  uuid                        String    @unique(map: "user_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  isActive                    Boolean   @default(true) @map("is_active")
  email                       String?   @unique(map: "user_email_unique")
  appleId                     String?   @unique(map: "user_apple_id_unique") @map("apple_id")
  googleId                    String?   @unique(map: "user_google_id_unique") @map("google_id")
  firstName                   String?   @map("first_name")
  lastName                    String?   @map("last_name")
  password                    String?
  contactEmail                String?   @map("contact_email")
  lastLoginAt                 DateTime? @map("last_login_at")
  role                        RoleEnum  @default(USER)
  token                       String?   @unique(map: "user_token_unique") @map("token")
  resetPasswordToken          String?   @unique(map: "user_reset_password_token_unique") @map("reset_password_token")
  resetPasswordTokenExpiresAt DateTime? @map("reset_password_token_expires_at")
  activationToken             String?   @unique(map: "user_activation_token_unique") @map("activation_token")
  activationTokenExpiresAt    DateTime? @map("activation_token_expires_at")
  createdAt                   DateTime  @default(now()) @map("created_at")
  updatedAt                   DateTime  @default(now()) @updatedAt @map("updated_at")

  groups           Group[]
  membership       Member[]   @relation("UserMembership")
  assignedFor      Member[]   @relation("AssignedUser")
  wishlists        Wishlist[]
  receivedMessages Message[]  @relation("ReceivedMessages")
  sentMessages     Message[]  @relation("SentMessages")
  devices          Device[]

  @@index([email], name: "user_email_idx")
  @@index([role], name: "user_role_idx")
  @@map("user")
}

model Group {
  id             Int             @id @default(autoincrement())
  uuid           String          @unique(map: "group_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  code           String          @unique(map: "group_code_unique")
  name           String
  password       String
  description    String?
  additionalInfo String?         @map("additional_info")
  ownerId        Int             @map("owner_id")
  eventDate      DateTime        @map("event_date")
  location       String?
  status         EnumGroupStatus @default(OPEN)
  createdAt      DateTime        @default(now()) @map("created_at")
  updatedAt      DateTime        @default(now()) @updatedAt @map("updated_at")

  owner     User       @relation(fields: [ownerId], references: [id])
  members   Member[]
  messages  Message[]
  wishlists Wishlist[]

  @@index([ownerId], name: "group_owner_idx")
  @@index([status], name: "group_status_idx")
  @@map("group")
}

model Member {
  id             Int       @id @default(autoincrement())
  uuid           String    @unique(map: "member_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId        Int       @map("group_id")
  userId         Int       @map("user_id")
  assignedUserId Int?      @map("assigned_user_id")
  isConfirmed    Boolean   @default(false) @map("is_confirmed")
  archivedAt     DateTime? @map("archived_at")
  lastReadAt     DateTime  @default(now()) @map("last_read_at")
  createdAt      DateTime  @default(now()) @map("created_at")
  updatedAt      DateTime  @default(now()) @updatedAt @map("updated_at")

  group        Group @relation(fields: [groupId], references: [id])
  user         User  @relation("UserMembership", fields: [userId], references: [id])
  assignedUser User? @relation("AssignedUser", fields: [assignedUserId], references: [id])

  @@unique([groupId, userId], name: "groupAndUser", map: "member_group_user_unique")
  @@index([groupId], name: "member_group_idx")
  @@index([userId], name: "member_user_idx")
  @@index([assignedUserId], name: "member_assigned_user_idx")
  @@map("member")
}

model Wishlist {
  id          Int      @id @default(autoincrement())
  uuid        String   @unique(map: "wishlist_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      Int      @map("user_id")
  groupId     Int      @map("group_id")
  name        String
  description String?
  url         String?
  priority    Int?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")

  user  User  @relation(fields: [userId], references: [id])
  group Group @relation(fields: [groupId], references: [id])

  @@index([userId], name: "wishlist_user_idx")
  @@index([groupId], name: "wishlist_group_idx")
  @@map("wishlist")
}

model Message {
  id         Int      @id @default(autoincrement())
  uuid       String   @unique(map: "message_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  groupId    Int      @map("group_id")
  senderId   Int      @map("sender_id")
  receiverId Int?     @map("receiver_id")
  content    String
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @default(now()) @updatedAt @map("updated_at")

  group    Group @relation(fields: [groupId], references: [id])
  sender   User  @relation("SentMessages", fields: [senderId], references: [id])
  receiver User? @relation("ReceivedMessages", fields: [receiverId], references: [id])

  @@index([groupId], name: "message_group_idx")
  @@index([senderId], name: "message_sender_idx")
  @@index([receiverId], name: "message_receiver_idx")
  @@map("message")
}

model Device {
  id                    Int            @id @default(autoincrement()) @map("id")
  uuid                  String         @unique(map: "device_uuid_unique") @default(dbgenerated("gen_random_uuid()")) @map("uuid") @db.Uuid
  userId                Int?           @map("user_id")
  platform              String?        @map("platform") @db.VarChar(100)
  platformVersion       String?        @map("platform_version") @db.VarChar(100)
  appVersion            String?        @map("app_version") @db.VarChar(100)
  appRevision           Int?           @default(0) @map("app_revision")
  runtimeVersion        String?        @map("runtime_version") @db.VarChar(100)
  pushNotificationToken String?        @unique(map: "device_push_notification_token_unique") @map("push_notification_token") @db.VarChar(500)
  deviceType            EnumDeviceType @default(UNKNOWN) @map("device_type")
  deviceName            String?        @map("device_name") @db.VarChar(100)
  osName                String?        @map("os_name") @db.VarChar(100)
  osVersion             String?        @map("os_version") @db.VarChar(100)
  language              String?        @map("language") @db.VarChar(20)
  region                String?        @map("region") @db.VarChar(20)
  createdAt             DateTime       @default(now()) @map("created_at")
  updatedAt             DateTime       @default(now()) @updatedAt @map("updated_at")
  user                  User?          @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId], name: "device_user_idx")
  @@index([deviceType], name: "device_device_type_idx")
  @@map("device")
}

enum EnumDeviceType {
  UNKNOWN
  PHONE
  TABLET
  DESKTOP
}

enum RoleEnum {
  USER
  ADMIN
}

enum EnumGroupStatus {
  OPEN
  CLOSED
  DRAWN
}
